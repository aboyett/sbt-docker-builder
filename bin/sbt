#!/usr/bin/env sh

set -e

SCRIPTS_DIR="/usr/local/bin"

if [ "${CI}" == "drone" ] ; then
    echo "Drone CI detected."
    export CACHE_DIR="/drone"

    . ${SCRIPTS_DIR}/cache-init.sh
    . ${SCRIPTS_DIR}/credential-init.sh
else
    echo "CI environment not detected. Running sbt without special preparation."
fi

sbt-paulp $@
